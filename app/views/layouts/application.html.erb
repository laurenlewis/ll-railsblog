<!DOCTYPE html>
<html>
<head>
  <title>Welcome to Nebula</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  	<%= csrf_meta_tags %>
    <link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
<!--     <div id="boom">
      <img src="assets/images/boom2.png">
    </div> -->
</head>
<body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   '/' %></li>
            <li><%= link_to "Show Users", '/users' %></li>
            <% if session[:session_user_id] %>
              <li><%= link_to "New Post", {:controller =>'posts', :action => 'new'} %></li>
              <li><%= link_to "My Page", {:controller =>'users', :action => 'show', :id => session[:session_user_id]} %></li>
            <% end %>
          </ul>
        </nav>
        <div class="login_info">
          <% if session[:session_user_id] %>
            <%= link_to "Logout", '/logout' %><br>
            <%= session[:session_user_email] %>
          <% else %>
            <%= link_to "Login", '/login' %> | 
            <%= link_to "Sign-Up", '/signup' %>
          <% end %>
        </div>
      </div>
    </header>
    <div class="container">
     
    </div>

	<!-- start flash messaging -->
	<% if flash[:notice] %>
		<div class="flash_notice">
			<%=flash[:notice] %>
		</div>
	<% end %>
	<% if flash[:alert] %>
		<div class="flash_alert">
			<%=flash[:alert] %>
		</div>
	<% end %>
	<!-- end flash messaging -->

	<%= yield %>

</body>
</html>
