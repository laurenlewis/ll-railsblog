<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table border="1">

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><a href="/posts/<%=post.id %>">Show</a></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to("Delete Post", post_path(post.id), method: :delete)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path %>