<p>
  <strong>Profile for</strong>
  <%= @user.fname %>
  <%= @user.lname %>
</p>
 
<div class="posts">
  <% @list = @user.posts.all %>
  <% @list.each do | post | %>
<p class="post_content">
  <%= @user.fname %> <%= post[:created_at]%><br> 
  <%= post[:content] %>
</p>
  <% end %> 
</div>

